<% layout("/layouts/boilerplate") %>

<!-- Filters -->
<!-- FILTER BAR SECTION -->
<!-- This section displays various property filters using Font Awesome icons.
     It uses Bootstrap's flex utilities to wrap and align them responsively. -->

<div id="filters" class="d-flex flex-wrap justify-content-center gap-3">
  <div class="filter text-center">
    <div><i class="fa-solid fa-fire"></i></div>
    <p class="mb-0">Trending</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-bed"></i></div>
    <p class="mb-0">Rooms</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-city"></i></div>
    <p class="mb-0">City</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-water"></i></div>
    <p class="mb-0">Beach</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p class="mb-0">Mountain</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-tree"></i></div>
    <p class="mb-0">Nature</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-campground"></i></div>
    <p class="mb-0">Camping</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p class="mb-0">Pool</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-house-flood-water"></i></div>
    <p class="mb-0">Lakefront</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-person-hiking"></i></div>
    <p class="mb-0">Adventure</p>
  </div>
  <div class="filter text-center">
    <div><i class="fa-solid fa-wine-glass"></i></div>
    <p class="mb-0">Luxury</p>
  </div>

  <!-- Tax Toggle -->
  <div class="tax-toggle d-flex align-items-center mt-2">
    <div class="form-check form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label small" for="switchCheckDefault">
        Total price with taxes
      </label>
    </div>
  </div>
</div>

<!-- Cards Section -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 mt-4 g-4">
  <% for (let listing of allListings) { %>
  <div class="col">
    <a
      class="listing-link text-decoration-none"
      href="/listings/<%= listing._id %>"
    >
      <div class="card listing-card h-100">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem; object-fit: cover"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
            <i
              style="font-size: 0.8rem"
              class="tax-info text-muted d-none"
              id="gst"
            >
              &nbsp; +18% GST
            </i>
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>

<!-- Script -->
<script>
  let totalPriceSwitch = document.getElementById("switchCheckDefault");
  totalPriceSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>







